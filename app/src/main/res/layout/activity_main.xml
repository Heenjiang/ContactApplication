<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/text_name"
        android:layout_width="@dimen/name_style"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/name_style_margin_top"/>
    <EditText
        android:id="@+id/text_phone_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_name"/>
    <Button
        android:id="@+id/find_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_phone_number"
        android:layout_marginLeft="@dimen/find_button_left"
        android:text="@string/find_button"/>
    <Button
        android:id="@+id/save_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_button"
        android:layout_toRightOf="@id/find_contact"
        android:layout_below="@id/text_phone_number"
        android:layout_marginLeft="@dimen/sava_button"/>
</RelativeLayout>